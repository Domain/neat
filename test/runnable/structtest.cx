module structtest;

macro import cx.macros.assert;

extern(C) void* malloc(size_t);
extern(C) void free(void*);

void main() {
    S s;
    s.a = 3;
    int* ap = &s.a;
    assert(*ap == 3);

    void* mem = malloc(8);
    S* sp = mem;
    int* ip = mem;
    sp.a = 5;
    sp.b = 8;
    assert(sp.a == 5);
    assert(*ip == 5);
    (*sp).a = 6;
    assert(sp[0].a == 6);

    S t = S(2, 3);
    assert(t.a == 2);
    assert(t.b == 3);
    assert(t.sum() == 5);
    free(mem);
}

struct S
{
    int a;
    int b;
    int sum() { return a + b; }
}
