module intfs;

macro import neat.macros.assert;

import helpers;

interface A {
    string foo();
}

interface B {
    string bar();
}

interface C : A, B {
    string baz();
}

class X : C {
    override string foo() { return "X.foo"; }
    override string bar() { return "X.bar"; }
    override string baz() { return "X.baz"; }
}

interface D {
    string qux();
}

class Y : X, D {
    this() { }

    override string foo() { return "Y.foo"; }
    override string bar() { return "Y.bar"; }
    override string baz() { return "Y.baz"; }
    override string qux() { return "Y.qux"; }
}

void main() {
    Y y = new Y;

    void dump() {
        print("contents of $(cast(size_t) y):");
        for (int i <- 0 .. 5) {
            print("  $i: $((cast(size_t*) y)[i])");
        }
    }
    // dump;
    size_t refs() { return (cast(size_t*) y)[1]; }
    assert(refs == 1);

    assert(y.foo == "Y.foo");
    assert(y.bar == "Y.bar");
    assert(y.baz == "Y.baz");
    assert(y.qux == "Y.qux");
    assert(y.instanceOf(Y));
    assert(y.instanceOf(X));
    assert(y.instanceOf(A));
    assert(y.instanceOf(B));
    assert(y.instanceOf(C));

    {
        X x = y;
        assert(x.foo == "Y.foo");
        assert(x.bar == "Y.bar");
        assert(x.baz == "Y.baz");
        assert(x.instanceOf(Y));
        assert(x.instanceOf(X));
        assert(x.instanceOf(A));
        assert(x.instanceOf(B));
        assert(x.instanceOf(C));

        C c = x;
        assert(c.foo == "Y.foo");
        assert(c.bar == "Y.bar");
        assert(c.baz == "Y.baz");
        assert(c.instanceOf(Y));
        assert(c.instanceOf(X));
        assert(c.instanceOf(A));
        assert(c.instanceOf(B));
        assert(c.instanceOf(C));
        assert(refs == 1);

        B b = c;
        assert(b.bar == "Y.bar");
        assert(b.instanceOf(Y));
        assert(b.instanceOf(X));
        assert(b.instanceOf(A));
        assert(b.instanceOf(B));
        assert(b.instanceOf(C));

        A a = c;
        assert(a.foo == "Y.foo");
        assert(a.instanceOf(Y));
        assert(a.instanceOf(X));
        assert(a.instanceOf(A));
        assert(a.instanceOf(B));
        assert(a.instanceOf(C));
    }
    assert(refs == 1);

    {
        B b2 = y;
        assert(b2.bar == "Y.bar");

        // FIXME why does b3 grab a ref?
        B b3 = b2;
        assert(b3.bar == "Y.bar");

        {
            mut B b1 = y;
            assert(b1.instanceOf(Y));
            mut B b2 = y.instanceOf(B);
            assert(b2.instanceOf(Y));
        }
    }
    assert(refs == 1);
}
