module ptrarraytest;

macro import cx.macros.assert;

extern(C) void* malloc(size_t);
extern(C) void free(void*);

void main() {
    int* ip = malloc(40);
    int i = 0;
    while (i < 10) {
        ip[i] = i;
        i += 1;
    }
    i = 0;
    int sum = 0;
    while (i < 10) {
        sum = sum + ip[i];
        i += 1;
    }
    assert(sum == 45);
    free(ip);
}
