module ufcs;

macro import std.macro.assert;

import helpers;

struct S
{
    int i;
    int bar() { return i; }
}

int getI(S s) { return s.i; }
int bar(S s) { return 6; }

void main() {
    S s = S(5);
    assert(s.getI == 5);
    assert(s.getI() == 5);
    assert(s.bar() == 5);
    assert(s.bar == 5);

    assert((new Test2).add(2, 3) == 5);

    "Success!".print;
}

// ufcs does not match class methods

int add(int a, int b) { return a + b; }

class Test2
{
    this() { }
    int add(int a, int b) {
        // this.add(a, b) is not a candidate
        return a.add(b);
    }
}
