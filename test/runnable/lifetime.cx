    test_array();
    test_struct_field();
    test_reassignment();
    // TODO test_parameter_reassignment();
    test_class_field();
    test_either_member();
    test_array_cat();
    test_statement_expr();
    test_break_cont();
    test_array_equals();
    test_struct_member();
    test_negation();
    test_with();
}
