module mathtest;

macro import std.macro.assert;

void main() {
    int i = 1;
    assert(i++ == 1);
    assert(++i == 3);
    assert(i-- == 3);
    assert(--i == 1);
    assert(-i == -1);
    assert(2 + 3 * 4 == 14);
    assert(15 % 4 == 3);
    // assert(2 << 2 == 8);
    assert(5 & 3 == 1);
    assert(5 | 3 == 7);
}
