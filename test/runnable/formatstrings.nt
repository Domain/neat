module formatstrings;

macro import neat.macros.assert;

void main() {
    int i = 5;
    assert("i = $i" == "i = 5");
    float f = 1.5f, g = 3.0f;
    assert("$f and $g" == "1.500000 and 3.000000");
    assert("the sum is $(f + g)." == "the sum is 4.500000.");
    long l;
    assert("$(l)" == "0"); // long
    int[] a;
    assert("$(a.length)" == "0"); // size_t
}
