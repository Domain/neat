module vartest;

macro import neat.macros.assert;

void main() {
    int a;
    assert(a == 0);
    int b = 3;
    assert(b == 3);
    int c, d;
    assert(c == 0 && d == 0);
    int e = 4, f;
    assert(e == 4 && f == 0);
    int g, h = 5;
    assert(g == 0 && h == 5);
    int i = 6, j = 7;
    assert(i == 6 && j == 7);
    int k = 5, l = k;
    assert(k == 5 && l == 5);
    auto m = 0.5, n = 7;
    assert(m / 2 == 0.25 && n / 2 == 3);
    // is this a good idea???
    auto = 2, = 3;
}
