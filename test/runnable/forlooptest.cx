module forlooptest;

macro import cx.macros.assert;

void main()
{
    {
        int k = 0;
        for (int i = 0; i < 10; i += 1) {
            k += 1;
        }
        assert(k == 10);
        for (int i = 10; i > 0; i -= 1) {
            k -= 1;
        }
        assert(k == 0);
    }
    // test: loop variable reinitialization
    for (int i = 0; i < 10; i += 1) {
        int l;
        assert(l == 0);
        l = 1;
    }
    {
        int i;
        for (int k = 0; k < 10; k += 1) {
            if (k < 3) continue;
            i += 1;
            if (k > 5) break;
        }
        assert(i == 4);
    }
    {
        int i;
        for (int j <- 0..10) {
            i += 1;
        }
        assert(i == 10);
    }
    {
        int sum;
        for (int j <- [2, 3, 4]) {
            sum += j;
        }
        assert(sum == 9);
    }
}
