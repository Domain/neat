module longestline;

macro import neat.macros.listcomprehension;

import std.file;
import std.stdio;
import std.string;

void main(string[] args) {
    auto text = cast(string) readFile(args[1]);
    string longestLine = [
        argmax(line.length) line
        for line in text.split("\n")];
    print(longestLine);
}
