alias ExtForVarDecl = ((:auto_ | ASTSymbol | :none) type, Loc loc, string name);

ASTSymbol quoteExtForVarDecl(ExtForVarDecl decl, Quoter quoter) {
    mut ASTSymbol[] tupleArgs;
    tupleArgs ~= decl.type.case(
            (:auto_): new ASTSymbolIdentifier("auto_"),
            (:none): new ASTSymbolIdentifier("none"),
            ASTSymbol sym: sym.quote(quoter));
    tupleArgs ~= quoter.quoteLoc(decl.loc);
    // auto $foo => (..., foo)
    if (decl.name.length > 0 && decl.name[0 .. 1] == "\$") {
        tupleArgs ~= quoter.compiler.astIdentifier(decl.name[1 .. $], __HERE__);
    } else {
        tupleArgs ~= quoter.compiler.astStringLiteral(decl.name, __HERE__);
    }

    return quoter.compiler.astTupleLiteral(tupleArgs, __HERE__);
}

