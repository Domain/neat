class ASTModule : ASTModuleBase
{
    Loc loc;

    string name;

    Package pak;

    MacroState macroState;

    // separated from this module with a divergent macro state
    // because we hit a macro declaration
    ASTModule parent;

    (ASTImport | ASTSymbol | ASTExtern | ASTFunction
        | ASTSymbolAlias | ASTTemplateDecl
    )[] entries;

    this(this.loc, this.name, this.pak, this.macroState, this.parent) { }

    void addSymbolAlias(string name, ASTSymbol symbol)
    {
        this.entries ~= new ASTSymbolAlias(name, symbol);
    }

    ASTSymbol getSymbolAlias(string name) {
        for (auto entry <- entries) {
            mut ASTSymbol ret;
            entry.case {
                ASTImport: {}
                ASTExtern: {}
                ASTFunction: {}
                ASTSymbol: {}
                ASTTemplateDecl: {}
                ASTSymbolAlias alias_: {
                    if (alias_.name == name) ret = alias_.symbol;
                }
            }
            // TODO lifetime check return member from case
            if (ret) return ret;
        }
        return null;
    }
}

string mangleModuleName(string name, Package pak)
{
    // TODO non-nullable by default
    assert(!!pak);
    mut string mangledName;
    // mangledName = [(a == '.') ? '_' : a for a in name];
    for (int i <- 0 .. name.length) {
        if (name[i .. i + 1] == ".") mangledName ~= "_";
        else mangledName ~= name[i .. i + 1];
    }
    mut string patchedPakName;
    if (pak.name == "compiler") patchedPakName = "compiler" ~ itoa(__GENERATION__);
    else patchedPakName = pak.name;

    return patchedPakName ~ "_module_" ~ mangledName;
}

struct Nothing { }

struct ResolvingModuleEntry
{
    string name;

    Symbol resolution;

    (ASTFunction | ASTClassDecl | ASTStructDecl | ASTAliasDecl | Nothing) symbol;
}

class Resolver
{
    ResolvingModuleEntry[] entries;

    this() { }

    void add(string name, (ASTFunction | ASTClassDecl | ASTStructDecl | ASTAliasDecl) astSymbol)
    {
        this.entries ~= ResolvingModuleEntry(name, null, astSymbol);
    }

    void register(string name, Symbol symbol)
    {
        int hit = cast(int) [first i for i, a in this.entries where a.name == name else -1];
        if (hit == -1) {
            entries ~= ResolvingModuleEntry(name, symbol, Nothing());
            return;
        }
        entries[hit].resolution = symbol;
    }

    Symbol lookup(Context context, string name)
    {
        int hit = cast(int) [first i for i, a in this.entries where a.name == name else -1];
        if (hit == -1) return null;
        resolve(context, hit);
        return this.entries[hit].resolution;
    }

    void resolve(Context context, int i)
    {
        if (!this.entries[i].resolution) {
            this.entries[i].resolution = this.entries[i].symbol.case(
                // TODO compile function statement immediately too
                ASTFunction fun:  fun.compile(context),
                ASTClassDecl decl: decl.compile(context),
                ASTStructDecl decl: decl.compile(context),
                ASTAliasDecl decl: decl.target.compile(context),
                Nothing _: ({ assert(false); cast(Symbol) null; }));
        }
    }

    void resolveAll(Context context)
    {
        for (int i <- 0 .. this.entries.length) {
            resolve(context, i);
        }
        for (int i <- 0 .. this.entries.length) {
            if (auto class_ = this.entries[i].resolution.instanceOf(Class)) {
                class_.resolve(context);
            }
        }
    }
}

extern(C) size_t poly_hash_whole_string(string s);

class Module : ModuleBase
{
    Loc loc;

    string name;

    string mangledName;

    // whenever macro state changes, we begin a new submodule
    // when this happens, this member references the previous module.
    Module parentModule;

    Resolver resolver;

    size_t hash; // hash of mangled name

    this(this.loc, this.name, this.mangledName, this.parentModule) {
        this.isContextScope = false;
        this.resolver = new Resolver;
        this.hash = poly_hash_whole_string(mangledName);
    }

    void add(string name, (ASTFunction | ASTClassDecl | ASTStructDecl | ASTAliasDecl) symbol)
    {
        this.resolver.add(name, symbol);
    }

    void register(string name, Symbol symbol)
    {
        this.resolver.register(name, symbol);
    }

    // bool visible: whether it affects lookups
    (Module mod, bool visible, string[] symbols)[] imports;

    override void addImport(ModuleBase module_, string[] symbols) {
        auto module_ = module_.instanceOf(Module);
        assert(!!module_);
        // TODO error?
        // TODO merge symbols?
        if ([any a.mod.mangledName == module_.mangledName for a in this.imports])
            return;
        this.imports ~= (module_, true, symbols);
    }

    void addModuleDependency(Module module_) {
        string[] empty;
        // TODO , [])
        this.imports ~= (module_, false, empty);
    }

    override string mangle() { return this.mangledName; }

    void resolve(Context context)
    {
        this.resolver.resolveAll(context);
    }

    void walkModules(void delegate(Module) cb)
    {
        cb(this);
        if (this.parentModule)
            this.parentModule.walkModules(cb);
        [import_.mod.walkModules(cb) for import_ in imports];
    }

    FinishedSymbol[] compile(CompilerBase compiler, Platform platform)
    {
        mut FinishedSymbol[] symbols;

        // must be a regular for loop so we can add entries during iteration
        for (mut int i = 0; i < this.resolver.entries.length; i += 1) {
            // TODO just get rid of this all
            ResolvingModuleEntry entry = this.resolver.entries[i];
            if (Function fun = entry.resolution.instanceOf(Function))
            {
                symbols ~= fun.compile(compiler, platform);
            }
            if (Class class_ = entry.resolution.instanceOf(Class)) {
                symbols ~= new DefineClass(class_);
                // class_.define(generator);
                symbols ~= [cast(FinishedSymbol) method.compile(compiler, platform) for method in class_.methods];
            }
            if (Struct struct_ = entry.resolution.instanceOf(Struct)) {
                symbols ~= [
                    cast(FinishedSymbol) method.instanceOf(StructMethod).compile(compiler, platform)
                    for method in struct_.methods];
            }
        }
        return symbols;
    }

    void emit(Generator generator, FinishedSymbol[] symbols)
    {
        if (!generator.once(mangle))
            return;

        assert(!generator.fun);

        [symbol.emit(generator) for symbol in symbols];
    }

    Symbol lookupPublic(Context context, string name)
    {
        // not counting imports (non-transitive)
        return this.resolver.lookup(context, name);
    }

    override Symbol lookup(string name, Context context, Expression frame)
    {
        if (!!frame) { print("error: lookup with frame propagated to Module"); assert(false); }

        if (Symbol public_ = this.lookupPublic(context, name)) return public_;
        for (auto import_ <- this.imports) {
            if (!import_.visible) continue;
            auto importMod = import_.mod;
            assert(!!importMod);
            if (!import_.symbols.length || [any a == name for a in import_.symbols]) {
                if (Symbol entry = importMod.lookupPublic(context, name)) return entry;
            }
        }
        if (this.parent)
            return this.parent.lookup(name, context, frame);
        return null;
    }
}

