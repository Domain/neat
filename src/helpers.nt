char* toStringz(string s) {
    char* ret = malloc(s.length + 1);
    memcpy(ret, s.ptr, s.length);
    ret[s.length] = "\0"[0];
    return ret;
}

int atoi(string s) { return neat_runtime_atoi(s); }
float atof(string s) { return neat_runtime_atof(s); }
